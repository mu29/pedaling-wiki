<div class="wiki-box">
  <form method="post" action=<%= url('/wikis/new')%>>
    <div class="form-group">
      <label>제목</label>
      <input type="text" class="form-control" placeholder="문서 제목을 입력하세요" name="title" />
    </div>
    <div class="form-group">
      <label>내용</label>
      <textarea rows="20" class="form-control" placeholder="문서 내용을 입력하세요" name="content"></textarea>
    </div>
    <div class="form-group">
      <label>보안 수준</label><br />
      <div class="btn-group" data-toggle="buttons">
        <label class="btn btn-default active">
          <input type="radio" name="level" value="1" checked>전체 공개
        </label>
        <label class="btn btn-default">
          <input type="radio" name="level" value="2">팀원만 보기
        </label>
        <label class="btn btn-default">
          <input type="radio" name="level" value="3">비밀
        </label>
      </div>
    </div>
    <div class="row">
      <div class="col-md-offset-11 col-md-1 col-xs-12">
        <button class="btn btn-default pull-right">작성하기</button>
      </div>
    </div>
  </form>
</div>
